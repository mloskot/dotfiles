[includeIf "gitdir/i:D:/**"]
	path = ~/.gitconfig.windows.personal
[includeIf "gitdir/i:F:/**"]
	path = ~/.gitconfig.windows.work
[includeIf "gitdir:%(prefix)//mnt/d/**"]
	path = %(prefix)//mnt/d/wsl-config/git/.gitconfig.wsl.personal
[includeIf "gitdir:%(prefix)//mnt/f/**"]
	path = %(prefix)//mnt/d/wsl-config/git/.gitconfig.wsl.work
[includeIf "gitdir:/home/mloskot/**"]
	path = /home/mloskot/wsl-config/git/.gitconfig.linux.personal
[includeIf "gitdir:/home/mloskot/azure*/**"]
	path = /mnt/d/wsl-config/git/.gitconfig.linux.work
[includeIf "gitdir:/home/mloskot/cadcorp/**"]
	path = /mnt/d/wsl-config/git/.gitconfig.linux.work
[include]
	path = ~/.gitconfig.alias_basic
	path = ~/.gitconfig.alias_ignore
	path = ~/.gitconfig.alias_log
	path = ~/.gitconfig.alias_tree
	path = ~/.gitconfig.alias_misc
[github]
	user = mloskot
[core]
	excludesfile = ~/.gitignore
	editor = \"code\" --wait
	longpaths = true
	fsmonitor = false
	untrackedcache = false
	symlinks = true
[delta]
    navigate = true
	line-numbers = true
	syntax-theme = base16
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	header = normal
	added = red
	updated = green
	changed = red
	untracked = red
	nobranch = red
[commit]
	template = ~/.gitconfig.message
[diff]
	colorMoved = default
[diff "exif"]
	textconv = exiftool
	cachetextconv = true
[difftool]
	prompt = false
[difftool "vscode"]
	cmd = 'C:/Program Files/Microsoft VS Code/bin/code' \"$LOCAL\" \"$REMOTE\" --diff --wait
	trustExitCode = false
[difftool "TortoiseGitMerge"]
	cmd = 'C:/Program Files/TortoiseGit/bin/TortoiseGitMerge.exe' \"$LOCAL\" \"$REMOTE\"
	trustExitCode = false
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
[mergetool "TortoiseGitMerge"]
	cmd = 'C:/Program Files/TortoiseGit/bin/TortoiseGitMerge.exe'  -base:\"$BASE\" -mine:\"$LOCAL\" -theirs:\"$REMOTE\" -merged:\"$MERGED\"
	trustExitCode = true
[pull]
	rebase = true
[safe]
	directory = *
[submodule]
	fetchJobs = 8
[http]
	postBuffer = 524288000
